<div class="container">
  <div class="row">
    
    <div class="col-sm-3">&nbsp;</div>
    
    <div class="col-sm-6">
      <h1>Edit Producto</h1>
      
      <%= form_for @product do |f| %>
        <div class="form-group">
          <%= f.text_field :name, class: "form-control input-lg", placeholder: "Ingresa el nombre del producto" %>
        </div>
        <div class="form-group">
          <%= f.text_field :price, class: "form-control input-lg", placeholder: "Ingresa la URL del producto" %>
        </div>

        <div class="form-group">
        <% @categories.each do |cat| %>


          <% if @product.category.include?(cat) %>
            <%= check_box_tag('product[category][]', value="#{cat}", checked = true) %>
            
          <% else %>
            <%= check_box_tag('product[category][]', value="#{cat.id}", checked = false) %>
          <% end %>
          <%= label_tag(:categories, cat.name) %>

          <br/>

        <% end %>
        </div>


        <div>
          <%= f.submit "Edit Producto", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>

    </div>

    <div class="col-sm-3">&nbsp;</div>

  </div>
</div>